<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingTop="18dp"
        tools:context=".screens.TrackerScreen">
    <TextView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:paddingHorizontal="8dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/text_heading"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="Manter calorias diÃ¡rias abaixo"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/rounded_primary_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_changeGoal" />
    <com.irwinarruda.goalstracker.components.IconButton
            android:id="@+id/button_changeGoal"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="0dp"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:iconButton_icon="@drawable/ic_change"
            app:iconButton_iconSize="20dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>