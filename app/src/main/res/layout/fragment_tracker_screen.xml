<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingTop="18dp"
        tools:context=".screens.TrackerScreen">
    <TextView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:paddingHorizontal="8dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/text_heading"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Manter calorias diárias abaixo de sei lá o que aqui em ta bom?"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/rounded_primary_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_changeGoal" />
    <com.irwinarruda.goalstracker.components.IconButton
            android:id="@+id/button_changeGoal"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="0dp"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:iconButton_icon="@drawable/ic_change"
            app:iconButton_iconSize="24dp" />
    <GridLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:columnCount="5"
            app:layout_constraintTop_toBottomOf="@+id/button_changeGoal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    >

        <com.irwinarruda.goalstracker.components.DayButton
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal"
                app:dayButton_day="Segunda"
                app:dayButton_count="1"
        />
        <com.irwinarruda.goalstracker.components.DayButton
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal"
                app:dayButton_count="2"
                app:dayButton_day="Terça"
        />
        <com.irwinarruda.goalstracker.components.DayButton
                android:layout_column="2"
                android:layout_row="0"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal"
                app:dayButton_count="3"
                app:dayButton_day="Quarta"
        />
        <com.irwinarruda.goalstracker.components.DayButton
                android:layout_column="3"
                android:layout_row="0"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal"
                app:dayButton_count="4"
                app:dayButton_day="Quinta"
        />
        <com.irwinarruda.goalstracker.components.DayButton
                android:layout_column="4"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal"
                app:dayButton_count="5"
                app:dayButton_day="Sexta"
        />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>