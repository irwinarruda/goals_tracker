<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="10dp"
        android:background="@drawable/modal_layer">
    <TextView
            android:id="@+id/goalCreateModal_title"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:paddingHorizontal="16dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/text_heading"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/add_goal"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/heading_layer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/goalCreateModal_buttonClose" />
    <com.irwinarruda.goalstracker.components.IconButton
            android:id="@+id/goalCreateModal_buttonClose"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="0dp"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:iconButton_icon="@drawable/ic_x"
            app:iconButton_iconSize="24dp" />

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter here"
            app:layout_constraintTop_toBottomOf="@+id/goalCreateModal_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter here"
            app:layout_constraintTop_toBottomOf="@+id/firstInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
