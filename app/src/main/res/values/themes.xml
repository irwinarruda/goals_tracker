<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.GoalsTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:colorAccent">@color/secondary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="floatingActionButtonStyle">@style/ThemeFloatingActionButton</item>
        <item name="checkboxStyle">@style/ThemeCheckbox</item>
        <item name="windowSplashScreenBackground">@color/primary</item>
    </style>
    <style name="Theme.GoalsTracker" parent="Base.Theme.GoalsTracker">
    </style>
    <style name="ThemeCoinsDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="ThemeGoalsModal" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    <style name="ThemeFloatingActionButton" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/ThemeFloatingActionButton.Rounded</item>
    </style>
    <style name="ThemeFloatingActionButton.Rounded" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="ThemeCheckbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeCheckbox.Color</item>
    </style>
    <style name="ThemeCheckbox.Color" parent="">
        <item name="colorOnSurface">@color/secondary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>